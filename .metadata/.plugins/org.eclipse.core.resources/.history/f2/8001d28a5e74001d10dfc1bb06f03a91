package com.lec.ex02_set;

import java.util.HashMap;
import java.util.Iterator;
import java.util.Map;
import java.util.Set;

public class HashMapMain1 {

	public static void main(String[] args) {
		// 1. Map객체생성
		
		Map<String,Integer> map = new HashMap<>();
		
		// 2. 객체저장 - put()
		map.put("홍길동", 85);
		map.put("홍길순", Integer.valueOf(80));
		map.put("홍길자", 75);
		map.put("홍길녀", 95);
		map.put("홍길상", 55);
		map.put("홍길동", 67); // 키중복은 에러는 발생하지 않지만 값이 대치된다. 
		System.out.println(map.size()); // String은 hashCode()와 equals()이 재정의 되어있다.
		
		Map<Integer,String> map2 = new HashMap<>();
		map2.put(1,"소향");
		map2.put(1,"나얼");
		map2.put(2,"소향");
		System.out.println(map2.size());// Integer도 hashCode()와 equals()이 재정의 되어있다.
		System.out.println();

		// 3. 객체검색(1) - get(Object)
		System.out.println("홍길동의 점수 = " + map.get("홍길동")); // 대치확인
		System.out.println("홍길녀의 점수 = " + map.get("홍길녀"));
		System.out.println("1번 학생의 이름 = " + map2.get(1));
		System.out.println("2번 학생의 이름 = " + map2.get(2));
		
		// 4. 객체검색(2) - keySet()
		Set<String> ketSet = map.keySet(); // Set타입으로 받기
		Iterator<String> names = ketSet.iterator();
		while(names.hasNext()) {
			String name = names.next();
			Integer score = map.get(name);
			System.out.println(name + "의 점수는 = " + score);
		}
		System.out.println();
		
		// 5. 객체검색(3) - entrySet()
		Set<Map.Entry<String, Integer>> entrySet = map.entrySet();
		Iterator<Map.Entry<String, Integer>> entrys = entrySet.iterator();
		while(entrys.hasNext()) {
			Map.Entry<String, Integer> entry = entrys.next();
			String name = entry.getKey();
			Integer score = entry.getValue();
			System.out.println(name + "의 점수는 = " + score);
		}
		
		
		
		
		
		// 6. 객체삭제 - remove()
		// 7. 전체삭제 - clear()

	}

}
